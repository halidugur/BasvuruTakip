@{
    ViewData["Title"] = "Yetkili Giriş";
}

<h2 class="text-light text-center mb-4">İşe Alım Uzmanı Girişi</h2>

<form asp-action="Giris" method="post" class="bg-dark p-4 rounded shadow" style="max-width: 400px; margin:auto;">
    <div class="form-group mb-3">
        <label class="text-light">Kullanıcı Adı</label>
        <input type="text" name="kullaniciAdi" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label class="text-light">Şifre</label>
        <input type="password" name="sifre" class="form-control" />
    </div>

    @if (ViewBag.Hata != null)
    {
        <div class="alert alert-danger">@ViewBag.Hata</div>
    }

    <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
</form>
